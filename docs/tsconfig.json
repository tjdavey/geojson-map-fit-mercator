{
  "version": "2.0.2",
  "compilerOptions": {
    "lib": ["es5", "es2015.promise", "dom", "es2015"],
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "assets/js",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules"
  ]
}
